<?xml version='1.0' encoding='utf-8'?>
<widget android-versionCode="0102010" id="net.khertan.forrunners" version="1.2.1" versionCode="0102010" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>ForRunners</name>
    <description>
    A gps tracker for runners
    </description>
    <author email="khertan@khertan.net" href="http://khertan.net/">
      Beno√Æt HERVIER (Khertan)
  </author>
    <content src="index.html" />
    <access origin="*" />
    <access launch-external="yes" origin="mailto:*" />
    <access origin="http://openweathermap.org/" />
    <access origin="http://a.tile.openstreetmap.org/" />
    <access origin="http://b.tile.openstreetmap.org/" />
    <access origin="http://c.tile.openstreetmap.org/" />
    <access origin="https://maps.googleapis.com/" />
    <allow-navigation href="http://a.tile.openstreetmap.org/" />
    <allow-navigation href="http://b.tile.openstreetmap.org/" />
    <allow-navigation href="http://c.tile.openstreetmap.org/" />
    <preference name="webviewbounce" value="false" />
    <preference name="UIWebViewBounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="BackupWebStorage" value="local" />
    <preference name="KeepRunning" value="True" />
    <preference name="LoadingDialog" value="My Title,My Message" />
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="20000" />
    <preference name="Orientation" value="portrait" />
    <preference name="android-manifest/application/activity/@android:launchMode" value="singleTask" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <feature name="StatusBar">
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
